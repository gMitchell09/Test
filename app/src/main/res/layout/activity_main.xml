<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gpv0001.virgil.MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:style_url="@string/style_dark" />

    <fragment
        android:id="@+id/fragment_details"
        android:layout_width="@dimen/sidebar_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:name="com.gpv0001.virgil.MainActivity$DetailsFragment"/>

    <fragment
        android:id="@+id/fragment_road"
        android:layout_width="@dimen/sidebar_width"
        android:layout_height="match_parent"
        android:name="com.gpv0001.virgil.MainActivity$RoadFragment"/>

    <fragment
        android:id="@+id/fragment_hazard"
        android:layout_width="@dimen/sidebar_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:name="com.gpv0001.virgil.MainActivity$HazardFragment"/>

    <fragment
        android:id="@+id/fragment_aid"
        android:layout_width="@dimen/sidebar_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:name="com.gpv0001.virgil.MainActivity$AidFragment"/>

    <fragment
        android:id="@+id/fragment_need"
        android:layout_width="@dimen/sidebar_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:name="com.gpv0001.virgil.MainActivity$NeedFragment"/>

</RelativeLayout>
